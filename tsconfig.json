{
	"compilerOptions": {
		"module": "es2015",
		"target": "es2017",
		"moduleResolution": "node",

		"rootDir": "src",
		"outDir": "build",

		"removeComments": false,
		"noEmitOnError": true,

		"strict": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,

		"lib": ["dom", "es6", "es2015", "es2016", "es2017", "esnext"],
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts"
	]
}
